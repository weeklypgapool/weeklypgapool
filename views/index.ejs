<!DOCTYPE html>
<html>
  <head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Weekly PGA Pool</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">
  </head>
  <body ng-app="app" ng-controller="appCtrl">
		<div class="container">
			<div class="row myHeader">
				<div class="col-xs-6">
					<h4>Weekly PGA Pool</h4>
				</div>
				<div class="col-xs-6" style="height:100%">
					<div class="pull-right" style="margin-top:8px">
						<a class="btn btn-xs" ng-class="getBtnClass('/leaderboard')" ui-sref="leaderboard" style="margin-right:8px" >Leaderboard</a>
						<a class="btn btn-xs" ng-class="getBtnClass('/pool')" ui-sref="pool">Pool</a>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12">
					<section ui-view style="margin-top:65px"></section>
				</div>
			</div>
		</div>

		<!-- libs -->
		<script src="//code.jquery.com/jquery-2.1.1.min.js"></script>
		<script src="//cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.min.js"></script>
		<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
		<!-- AngularJS -->
		<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular.min.js"></script>
		<script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.min.js"></script>
		<!-- Firebase -->
		<script src="https://cdn.firebase.com/js/client/1.0.18/firebase.js"></script>
		<!-- AngularFire -->
		<script src="https://cdn.firebase.com/libs/angularfire/0.8.0/angularfire.min.js"></script>
		<!-- app -->
		<script src="app/app.js"></script>
		<script src="app/appCtrl.js"></script>
		<script src="app/leaderboard/leaderboardCtrl.js"></script>
		<script src="app/admin/adminCtrl.js"></script>
  </body>
</html>